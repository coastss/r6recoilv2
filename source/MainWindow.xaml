            <Label x:Name="MainWindowTitle" IsHitTestVisible="False" Content="r6recoil" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" FontSize="16" FontWeight="Bold" FontFamily="Bahnschrift" Foreground="White" Panel.ZIndex="1"/>
