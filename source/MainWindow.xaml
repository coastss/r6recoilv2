            <Label x:Name="XAxisSliderLabel" Content="X-Axis" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Bahnschrift Light" Foreground="White" Height="26" FontSize="14" Margin="8,35,0,0"/>
            <Label x:Name="XAxisSliderValue" Content="0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Bahnschrift Light" Foreground="White" Height="26" FontSize="14" Margin="0,35,10,0" HorizontalContentAlignment="Right"/>

            <Slider Style="{DynamicResource CustomSlider}" x:Name="YAxisSlider" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="YAxisSlider_ValueChanged" Minimum="-20" Maximum="20" Value="0" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="230" SnapsToDevicePixels="True" IsSelectionRangeEnabled="True"/>
            <Label x:Name="YAxisSliderLabel" Content="Y-Axis" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Bahnschrift Light" Foreground="White" Height="26" FontSize="14" Margin="8,70,0,0"/>
            <Label x:Name="YAxisSliderValue" Content="0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Bahnschrift Light" Foreground="White" Height="26" FontSize="14" Margin="0,70,10,0" HorizontalContentAlignment="Right"/>

            <ComboBox Style="{DynamicResource CustomComboBox}" x:Name="OperatorsListBox" FontFamily="Bahnschrift Light" FontSize="14" SelectionChanged="OperatorsListBox_SelectionChanged" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="226" Background="#FF373737" BorderBrush="#FF232323" Foreground="White"/>

            <RadioButton x:Name="AttackersRadioButton" Click="AttackersRadioButton_Click" IsChecked="True" Content="Attackers" HorizontalAlignment="Left" Margin="33,0,0,0" VerticalAlignment="Center" Foreground="#FF4B90FF" FontFamily="Bahnschrift Light" FontSize="14" BorderBrush="White" Background="White"/>
            <RadioButton x:Name="DefendersRadioButton" Click="DefendersRadioButton_Click" Content="Defenders" HorizontalAlignment="Left" Margin="129,0,0,0" VerticalAlignment="Center" Foreground="#FFFF4B4B" FontFamily="Bahnschrift Light" FontSize="14" Background="White" BorderBrush="White"/>

            <Label x:Name="BottomStatusText" Content="build | siege focus: inactive | recoil: disabled" HorizontalAlignment="center" VerticalAlignment="Top" Background="{x:Null}" FontFamily="Arial" Foreground="#FF5A5A5A" Panel.ZIndex="1" Margin="-1,225,0,0" FontSize="10"/>
            <Button Style="{DynamicResource CustomButton}" x:Name="ModeCycleButton"  Content="MODE: ADS Only" Click="ModeCycleButton_Click" FontFamily="Bahnschrift Light" FontSize="14"  HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top" Width="226" Background="#FF373737" BorderBrush="#FF232323" Foreground="White"/>
            <Button Style="{DynamicResource CustomButton}" x:Name="StatusButton" Content="Toggle Recoil Reduction (F2)" Click="StatusButton_Click" FontFamily="Bahnschrift Light" FontSize="14"  HorizontalAlignment="Center" Margin="0,196,0,0" VerticalAlignment="Top" Width="226" Background="#FF373737" BorderBrush="#FF232323" Foreground="#FFFF4B4B"/>


        </Grid>
    </Border>
